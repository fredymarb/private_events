<h2>All Events</h2>

<h3>Upcoming Events</h3>
<ul>
  <% @events.upcoming_events.includes(:creator).each do |event| %>
    <li><%= link_to event.name, event_path(event) %></li>
  <% end %>
</ul>

<h3>Past Events</h3>
<ul>
  <% @events.past_events.includes(:creator).each do |event| %>
    <li><%= link_to event.name, event_path(event) %></li>
  <% end %>
</ul>

<% if user_signed_in? %>
  <%= link_to "Sign out", destroy_user_session_path, 
    data: { 
      turbo_method: :delete, 
      turbo_confirm: "Are you sure you want to sign out" 
    }
  %>
<% else %>
  <button><%= link_to "Sign In", new_user_session_path %></button>
<% end %>