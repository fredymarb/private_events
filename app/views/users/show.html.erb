<h2>Created Events</h2>
<ul>
  <% @created_events.each do |event| %>
    <li><%= link_to event.name, event_path(event) %></li>
  <% end %>
</ul>

<h3>Attended Events</h3>
<h4>Past Events</h4>
<ul>
  <% current_user.attended_events.where(date: ...Date.today).order(date: :desc).each do |attended_event| %>
    <li><%= link_to attended_event.name, event_path(attended_event) %></li>
  <% end %>
</ul>

<h4>Upcomming Events</h4>
<ul>
  <% current_user.attended_events.where(date: Date.today..).order(date: :asc).each do |attended_event| %>
    <li><%= link_to attended_event.name, event_path(attended_event) %></li>
  <% end %>
</ul>

<%= button_to "Sign out", destroy_user_session_path, method: :delete, data: {turbo_confirm: "Are you sure you want to sign out?"} %>